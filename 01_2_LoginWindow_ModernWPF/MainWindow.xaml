<Window
    x:Class="_01_2_LoginWindow_ModernWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_01_2_LoginWindow_ModernWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    Width="800"
    Height="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <ui:SimpleStackPanel Margin="12" Spacing="24">
        <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="My first ModernWPF app" />
        <Button Content="I am a button" />
        <Button Content="I am a button 2" />
        <Button Content="I am an emphasized button" Style="{StaticResource AccentButtonStyle}" />
        <Button Content="I am an accent button" Style="{StaticResource AccentButtonStyle}" />
    </ui:SimpleStackPanel>
</Window>
