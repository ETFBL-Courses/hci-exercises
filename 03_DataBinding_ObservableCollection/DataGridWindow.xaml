<Window
    x:Class="_03_DataBinding_ObservableCollection.DataGridWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_03_DataBinding_ObservableCollection"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DataGridWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="booksGrid"
            Grid.Row="0"
            Margin="0,0,0,10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Books}"
            SelectedItem="{Binding SelectedBook, Mode=TwoWay}">

            <!--  Context Menu  -->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="MarkAsRead_Click" Header="Mark as Read">
                        <MenuItem.Icon>
                            <TextBlock FontWeight="Bold" Text="✓" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Click="DeleteBook_Click" Header="Delete Book">
                        <MenuItem.Icon>
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="Red"
                                Text="✗" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <!--  Columns  -->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Title}"
                    Header="Title" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Author}"
                    Header="Author" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Year}"
                    Header="Year" />
                <DataGridCheckBoxColumn
                    Width="Auto"
                    Binding="{Binding IsRead}"
                    Header="Read" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,10,0"
                Click="AddBook_Click"
                Content="Add Book" />
            <Button
                Width="120"
                Click="DeleteBook_Click"
                Content="Delete Selected" />
        </StackPanel>
    </Grid>
</Window>
