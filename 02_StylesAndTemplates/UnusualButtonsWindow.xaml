<Window
    x:Class="_02_StylesAndTemplates.UnusualButtonsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_02_StylesAndTemplates"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Unusual Buttons"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="ButtonPath" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Path
                                Name="Path"
                                Fill="Yellow"
                                Stroke="Black"
                                StrokeThickness="3">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure IsClosed="True" StartPoint="10,50">
                                                <LineSegment Point="40 65" />
                                                <LineSegment Point="10 80" />
                                                <ArcSegment
                                                    IsLargeArc="True"
                                                    IsSmoothJoin="True"
                                                    Point="10 50"
                                                    RotationAngle="1"
                                                    Size="40 45"
                                                    SweepDirection="CounterClockwise" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsPressed" Value="True">
                                    <Setter TargetName="Path" Property="Fill" Value="Green" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ButtonPolygon" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Polygon
                                Name="Polygon"
                                Fill="Blue"
                                Points="50 50 90 20 80 120 20 100 10 10"
                                Stroke="Black"
                                StrokeThickness="3" />
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsPressed" Value="True">
                                    <Setter TargetName="Polygon" Property="Fill" Value="Green" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ButtonPolyline" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Polyline
                                Name="Polyline"
                                Points="10 10 50 75 100 20 140 30 110 70 150 80 190 20 230 60"
                                StrokeThickness="10">
                                <Polyline.Stroke>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Offset="0" Color="Black" />
                                        <GradientStop Offset="0.2" Color="#FFEB0C0C" />
                                        <GradientStop Offset="0.5" Color="#FF18A718" />
                                        <GradientStop Offset="0.7" Color="#FF0625F5" />
                                        <GradientStop Offset="1" Color="#FFEFEF12" />
                                    </LinearGradientBrush>
                                </Polyline.Stroke>
                            </Polyline>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Button.IsPressed" Value="True">
                                    <Setter TargetName="Polyline" Property="StrokeThickness" Value="15" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Button
            Width="95"
            Height="128"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{StaticResource ButtonPath}" />
        <Button
            Width="95"
            Height="128"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Style="{StaticResource ButtonPolygon}" />
        <Button
            Width="250"
            Height="100"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Style="{StaticResource ButtonPolyline}" />
    </Grid>
</Window>
