<Application
    x:Class="_02_StylesAndTemplates.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:_02_StylesAndTemplates"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="LightBlue" />
        <Style x:Key="ButtonBasic" TargetType="Button">
            <Setter Property="BorderBrush" Value="Orange" />
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
            <Setter Property="FontSize" Value="15" />
        </Style>
        <Style
            x:Key="ButtonEmphasized"
            BasedOn="{StaticResource ButtonBasic}"
            TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style
            x:Key="ButtonEmphasizedTrigger"
            BasedOn="{StaticResource ButtonEmphasized}"
            TargetType="Button">
            <Style.Triggers>
                <Trigger Property="Button.IsMouseOver" Value="true">
                    <Setter Property="Foreground" Value="LightCoral" />
                    <Setter Property="FontSize" Value="17" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ButtonEllipse" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse
                                Name="Ellipse"
                                Fill="LightGreen"
                                Stroke="DarkGreen" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Button.IsPressed" Value="true">
                                <Setter TargetName="Ellipse" Property="Fill" Value="DarkGreen" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
