<Window x:Class="_01_Panels.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_Panels"
        mc:Ignorable="d"
        Title="DockPanel Example" Height="270" Width="600">
    <DockPanel>
        <Button Content="Left" DockPanel.Dock="Left" Width="50"/>
        <Button Content="Top" DockPanel.Dock="Top" Height="50"/>
        <Button Content="Right" DockPanel.Dock="Right" Width="50"/>
        <Button Content="Bottom" DockPanel.Dock="Bottom" Height="50" />
        <Button>
            <StackPanel>
                <TextBlock Foreground="SteelBlue">Poslednje dete ispunjava ostatak prostora,<LineBreak></LineBreak> jer je (podrazumevano) <Bold>LastChildFill=True</Bold>.</TextBlock>
                <TextBlock Margin="0,10,0,0" Foreground="Navy">Ovo je element Button koji sadrži StackPanel sa dva TextBlock-a.</TextBlock>
            </StackPanel>
        </Button>
    </DockPanel>
</Window>
