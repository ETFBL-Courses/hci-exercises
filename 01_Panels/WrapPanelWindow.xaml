<Window
    x:Class="_01_Panels.WrapPanelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_01_Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WrapPanel Example"
    Width="300"
    Height="180"
    mc:Ignorable="d">
    <WrapPanel>
        <Button Width="80" Content="1" />
        <Button Width="175" Content="2" />
        <Button Width="150" Content="3" />
        <Button Width="50" Content="4" />
        <Button Width="80" Content="5" />
        <Button Width="75" Content="6" />
        <Button Width="75" Content="7" />
        <Button Width="175" Content="8" />
    </WrapPanel>
</Window>
