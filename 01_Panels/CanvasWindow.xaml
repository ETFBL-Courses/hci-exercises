<Window
    x:Class="_01_Panels.CanvasWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_01_Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Canvas Example"
    Width="500"
    Height="280"
    mc:Ignorable="d">
    <Canvas>
        <Button
            Canvas.Left="10"
            Canvas.Top="10"
            Width="100"
            Height="30"
            Content="1" />
        <Button
            Canvas.Top="10"
            Canvas.Right="10"
            Width="100"
            Height="30"
            Content="2" />
        <Button
            Canvas.Left="10"
            Canvas.Top="60"
            Width="140"
            Height="45"
            Content="3" />
        <Button
            Canvas.Left="160"
            Canvas.Top="60"
            Width="120"
            Height="40"
            Content="4" />
        <Button
            Canvas.Right="10"
            Canvas.Bottom="10"
            Width="80"
            Height="30"
            Content="5" />
    </Canvas>
</Window>
