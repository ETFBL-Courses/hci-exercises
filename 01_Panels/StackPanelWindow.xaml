<Window
    x:Class="_01_Panels.StackPanelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_01_Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StackPanel Example"
    Width="650"
    Height="275"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Button
                Width="100"
                Height="30"
                Content="1" />
            <Button
                Width="100"
                Height="30"
                Content="2" />
            <Button
                Width="140"
                Height="45"
                Content="3" />
            <Expander
                Margin="10,0"
                BorderBrush="Gray"
                BorderThickness="2"
                Header="Expander">
                <StackPanel>
                    <Button
                        Width="50"
                        Height="25"
                        Content="4" />
                    <Button
                        Width="50"
                        Height="25"
                        Content="5" />
                    <Button
                        Width="50"
                        Height="25"
                        Content="6" />
                </StackPanel>
            </Expander>
            <Button
                Width="100"
                Height="30"
                Content="7" />
            <Label HorizontalAlignment="Center" Content="Elementi unutar ovog StackPanel-a složeni su jedan ispod drugog." />
        </StackPanel>
    </ScrollViewer>
</Window>
