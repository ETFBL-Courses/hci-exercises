<Window
    x:Class="_01_Panels.GridWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_01_Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Grid with Splitter Example"
    Width="400"
    Height="220"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GridSplitter
            Grid.RowSpan="2"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Navy" />
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="80"
            Height="20"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="1" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="70"
            Margin="30,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="2" />
        <Button
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Height="35"
            Margin="20,20,50,0"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="5 (show/hide grid lines)" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Height="25"
            Margin="5,5,5,0"
            VerticalAlignment="Top"
            Content="3" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Width="30"
            Margin="5,45,0,5"
            HorizontalAlignment="Left"
            Content="4" />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Width="45"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="6" />
    </Grid>
</Window>
